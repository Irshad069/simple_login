<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/textlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3">
            <TextView
                android:id="@+id/Htextview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Main Screen"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <ImageButton
                android:id="@+id/drawerbutton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/drawer"
                android:layout_margin="5dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imagelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Htext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="150dp"
                android:text="read data"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="30dp"
                android:padding="3dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/Hedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Htext"
                android:layout_marginTop="80dp"
                android:layout_marginHorizontal="50dp"
                android:hint="enter your email"
                android:paddingHorizontal="3dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Hedittext"
                android:layout_marginTop="50dp"
                android:text="get data"
                android:textSize="20dp"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/Htext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn2"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:text="name"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/Htext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Htext1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="email"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/Htext3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Htext2"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="password"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/Htext4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Htext3"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="age"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/Htext5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Htext4"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="password"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="3dp"
                android:textColor="@color/black"
                />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>